<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ›¡ï¸ IDS Suricata"
                    android:textSize="24sp"
                    android:textStyle="bold"/>

                <!-- Cobertura Total Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“Š Cobertura Total"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvCoveragePercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100%"
                            android:textSize="48sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"
                            android:layout_gravity="center"
                            android:layout_marginVertical="8dp"/>

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/coverageChart"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/tvTotalEvents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL: 20,153 eventos"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- lxc-vpn Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ” lxc-vpn (Apps Traffic)"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvAppsStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â— ACTIVE"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvAppsVersion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="v7.0.3"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/tvAppsRules"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="48,300 reglas"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/tvAppsInterface"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Interface: wg0"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView
                                    android:id="@+id/tvAppsEvents"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="19,599 evt"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="#42A5F5"/>

                                <TextView
                                    android:id="@+id/tvAppsPercent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="70%"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- lxc-host-gw Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ›¡ï¸ lxc-host-gw (HOST Traffic)"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvHostStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â— ACTIVE"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvHostVersion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="v8.0.3"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/tvHostRules"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="48,268 reglas"
                                    android:textSize="12sp"/>

                                <TextView
                                    android:id="@+id/tvHostInterface"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Interface: eth0"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView
                                    android:id="@+id/tvHostEvents"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="554 evt"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="#66BB6A"/>

                                <TextView
                                    android:id="@+id/tvHostPercent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="30%"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Alertas -->
                <TextView
                    android:id="@+id/tvAlertsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸš¨ Alertas Recientes (0)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"/>

                <TextView
                    android:id="@+id/tvNoAlerts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No hay alertas recientes"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerAlerts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:nestedScrollingEnabled="false"/>

            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
